{
    "activationEvents": [
        "onStartupFinished"
    ],
    "author": {
        "email": "info@lennard-fickus.de",
        "name": "LennardFi"
    },
    "categories": [
        "Other"
    ],
    "contributes": {
        "commands": [
            {
                "command": "rocket-chat-status.openMenu",
                "icon": "$(rocket)",
                "shortTitle": "RCS: Open Menu",
                "title": "Rocket.Chat Status: Open Menu"
            }
        ],
        "configuration": {
            "properties": {
                "rocket-chat-status.apiUrl": {
                    "description": "The base URL of the API endpoint",
                    "examples": [
                        "https://rocket.example.com/"
                    ],
                    "title": "API base URL",
                    "type": "string"
                },
                "rocket-chat-status.historyLimit": {
                    "default": 10,
                    "markdownDescription": "If this option is not `0`, the extension stores the specified number of statuses last set by this extension.",
                    "maximum": 1024,
                    "minimum": 0,
                    "title": "Status history limit",
                    "type": "number"
                },
                "rocket-chat-status.statusLabelFormat": {
                    "default": "{colorBegin}{:rocket:} {msg}{colorEnd}",
                    "description": "This configuration can be used to format the appearance of the Rocket.Chat status bar item",
                    "type": "string"
                },
                "rocket-chat-status.templates": {
                    "editPresentation": "singlelineText",
                    "examples": [
                        {
                            "availability": "away",
                            "message": "Lunch break till {t+1h,~5m,=\"[hh]:[mm]\"}"
                        },
                        {
                            "availability": "online",
                            "message": "Working on {#@\"https://github.com/UserOrCompany/MyProject/issues/%i\"}"
                        }
                    ],
                    "items": {
                        "properties": {
                            "availability": {
                                "oneOf": [
                                    "online",
                                    "away",
                                    "busy",
                                    "hidden",
                                    "all"
                                ],
                                "type": "string"
                            },
                            "message": {
                                "type": "string"
                            }
                        },
                        "type": "object"
                    },
                    "markdownDescription": "[Show the Guide](https://github.com/LennardFi/rocket-chat-status/tree/main/doc/status-message-templates.md)",
                    "title": "Status templates",
                    "type": "array"
                }
            },
            "title": "Rocket.Chat Status"
        }
    },
    "dependencies": {
        "temporal-polyfill": "^0.0.7"
    },
    "description": "Set the Rocket.Chat status from within VSCode",
    "devDependencies": {
        "@types/jest": "^28.1.1",
        "@types/node": "^15.12.2",
        "@types/vscode": "^1.68.0",
        "@typescript-eslint/eslint-plugin": "^4.27.0",
        "@typescript-eslint/parser": "^4.27.0",
        "eslint": "^7.28.0",
        "jest": "^28.1.0",
        "prettier": "^2.5.1",
        "ts-jest": "^28.0.4",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.8.1",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2",
        "webpack": "^5.38.1",
        "webpack-cli": "^4.7.2"
    },
    "displayName": "Rocket.Chat Status",
    "engines": {
        "vscode": "^1.68.0"
    },
    "license": "MIT",
    "main": "./dist/extension.js",
    "name": "rocket-chat-status",
    "publisher": "lennardfi",
    "repository": {
        "type": "git",
        "url": "https://github.com/LennardFi/rocket-chat-status"
    },
    "scripts": {
        "precompile": "npm run lint",
        "compile": "webpack",
        "predev": "npm run lint",
        "dev": "webpack --watch",
        "lint": "eslint src --ext ts",
        "prepackage": "npm run lint && npm run test",
        "package": "webpack --mode production --devtool hidden-source-map",
        "pretest": "npm run lint",
        "test": "jest",
        "pretest:watch": "npm run pretest",
        "test:watch": "jest --watch",
        "vscode:prepublish": "npm run package"
    },
    "version": "0.3.1"
}
